<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewTeamBadge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textViewTeamName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageViewTeamBadge"
        app:layout_constraintTop_toTopOf="@id/imageViewTeamBadge"
        app:layout_constraintBottom_toBottomOf="@id/imageViewTeamBadge"
        app:layout_constraintEnd_toStartOf="@id/imageViewFavorite"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/imageViewFavorite"
        android:src="@drawable/ic_favorite_border"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textViewTeamName"
        app:layout_constraintTop_toTopOf="@id/textViewTeamName"
        android:layout_marginEnd="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
